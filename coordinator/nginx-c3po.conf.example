# C3PO Nginx Reverse Proxy Configuration (OAuth + mcp-auth-proxy)
#
# This config provides TLS termination and dual-path routing:
# - MCP traffic goes through mcp-auth-proxy (OAuth 2.1 gateway)
# - Hook REST traffic uses a shared secret (validated by nginx)
# - Health endpoint is unauthenticated
#
# Prerequisites:
# - mcp-auth-proxy running on port 8421
# - coordinator running on port 8420
# - GitHub OAuth app configured
#
# Place this in your nginx sites-enabled directory and adjust the
# values marked with TODO.

upstream c3po_proxy {
    server 127.0.0.1:8421;  # mcp-auth-proxy
    keepalive 8;
}

upstream c3po_coordinator {
    server 127.0.0.1:8420;  # coordinator direct
    keepalive 8;
}

# Hook secret validation for REST endpoints
# TODO: Replace with your actual hook secret value
map $http_x_c3po_hook_secret $hook_auth_valid {
    "YOUR_HOOK_SECRET_HERE" 1;
    default 0;
}

# Rate limit zones
limit_req_zone $binary_remote_addr zone=c3po_api:10m rate=30r/s;
limit_req_zone $binary_remote_addr zone=c3po_admin:1m rate=5r/m;

server {
    listen 443 ssl http2;
    server_name c3po.example.com;  # TODO: Your domain

    # TLS configuration
    ssl_certificate /path/to/cert.pem;      # TODO: Your certificate
    ssl_certificate_key /path/to/key.pem;   # TODO: Your private key
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    # Security headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "0" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Request body size limit
    client_max_body_size 64k;

    # Health endpoint - no auth required, direct to coordinator
    location = /api/health {
        limit_req zone=c3po_api burst=10 nodelay;
        proxy_pass http://c3po_coordinator;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Hook REST endpoints - validated by hook secret header
    # nginx strips the hook secret and injects the proxy bearer token
    location /api/ {
        if ($hook_auth_valid = 0) {
            return 401 '{"error": "Unauthorized"}';
        }

        limit_req zone=c3po_api burst=10 nodelay;

        # Strip hook secret, inject proxy bearer token
        proxy_set_header X-C3PO-Hook-Secret "";
        proxy_set_header Authorization "Bearer PROXY_BEARER_TOKEN_VALUE";  # TODO: Replace with actual proxy token

        proxy_pass http://c3po_coordinator;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Admin endpoints - same auth as hooks, stricter rate limit
    location /api/admin/ {
        if ($hook_auth_valid = 0) {
            return 401 '{"error": "Unauthorized"}';
        }

        limit_req zone=c3po_admin burst=3 nodelay;

        proxy_set_header X-C3PO-Hook-Secret "";
        proxy_set_header Authorization "Bearer PROXY_BEARER_TOKEN_VALUE";  # TODO: Replace with actual proxy token

        proxy_pass http://c3po_coordinator;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth discovery endpoints -> mcp-auth-proxy
    location /.well-known/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth IdP endpoints -> mcp-auth-proxy
    location /.idp/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth callback endpoints -> mcp-auth-proxy
    location /.auth/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # MCP endpoint -> mcp-auth-proxy (handles OAuth + proxies to coordinator)
    location /mcp {
        limit_req zone=c3po_api burst=20 nodelay;
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_http_version 1.1;

        # SSE/long-poll support
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3700s;  # Slightly longer than max wait_for_message timeout (3600s)
    }

    # Deny everything else
    location / {
        return 404;
    }
}

# HTTP -> HTTPS redirect
server {
    listen 80;
    server_name c3po.example.com;  # TODO: Your domain
    return 301 https://$host$request_uri;
}
