# C3PO Nginx Reverse Proxy Configuration (OAuth + mcp-auth-proxy)
#
# This config provides TLS termination and path-based routing:
# - /agent/* and /admin/*: Bearer token with server_secret prefix (validated by nginx)
# - /oauth/*: OAuth via mcp-auth-proxy
# - /api/health: Public, no auth
#
# nginx validates the server_secret prefix on all /agent/* and /admin/* requests.
# The coordinator validates the remainder (API key via bcrypt, admin key via compare).
#
# Prerequisites:
# - mcp-auth-proxy running on port 8421
# - coordinator running on port 8420
# - GitHub OAuth app configured
#
# Place this in your nginx sites-enabled directory and adjust the
# values marked with TODO.

upstream c3po_proxy {
    server 127.0.0.1:8421;  # mcp-auth-proxy
    keepalive 8;
}

upstream c3po_coordinator {
    server 127.0.0.1:8420;  # coordinator direct
    keepalive 8;
}

# Validate server_secret prefix in Bearer token
# Both /agent/* and /admin/* use: Authorization: Bearer <server_secret>.<key>
# nginx checks the prefix; coordinator checks the key portion.
# TODO: Replace SERVER_SECRET_HERE with your actual C3PO_SERVER_SECRET value
map $http_authorization $agent_auth_valid {
    "~^Bearer SERVER_SECRET_HERE\." 1;   # TODO: replace SERVER_SECRET_HERE
    default 0;
}

# Rate limit zones
limit_req_zone $binary_remote_addr zone=c3po_api:10m rate=30r/s;
limit_req_zone $binary_remote_addr zone=c3po_admin:1m rate=5r/m;

server {
    listen 443 ssl http2;
    server_name c3po.example.com;  # TODO: Your domain

    # TLS configuration
    ssl_certificate /path/to/cert.pem;      # TODO: Your certificate
    ssl_certificate_key /path/to/key.pem;   # TODO: Your private key
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    # Security headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "0" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Request body size limit
    client_max_body_size 64k;

    # Health endpoint — exact match, no auth required, direct to coordinator
    location = /api/health {
        limit_req zone=c3po_api burst=10 nodelay;
        limit_except GET { deny all; }

        # Don't forward client headers to health endpoint
        proxy_pass_request_headers off;
        proxy_pass_request_body off;

        proxy_pass http://c3po_coordinator;
    }

    # Agent endpoints — server_secret prefix validated by nginx
    location /agent/ {
        if ($agent_auth_valid = 0) {
            return 401 '{"error": "Unauthorized"}';
        }

        limit_req zone=c3po_api burst=10 nodelay;

        proxy_pass http://c3po_coordinator;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_http_version 1.1;

        # SSE/long-poll support for /agent/mcp
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3700s;  # Slightly longer than max wait_for_message timeout (3600s)
    }

    # Admin endpoints — same server_secret prefix, stricter rate limit
    location /admin/ {
        if ($agent_auth_valid = 0) {
            return 401 '{"error": "Unauthorized"}';
        }

        limit_req zone=c3po_admin burst=3 nodelay;

        proxy_pass http://c3po_coordinator;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth discovery endpoints -> mcp-auth-proxy
    location /.well-known/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth IdP endpoints -> mcp-auth-proxy
    location /.idp/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth callback endpoints -> mcp-auth-proxy
    location /.auth/ {
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth MCP endpoint -> mcp-auth-proxy (handles OAuth + proxies to coordinator)
    location /oauth/ {
        limit_req zone=c3po_api burst=20 nodelay;
        proxy_pass http://c3po_proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_http_version 1.1;

        # SSE/long-poll support
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3700s;
    }

    # Deny everything else
    location / {
        return 404;
    }
}

# HTTP -> HTTPS redirect
server {
    listen 80;
    server_name c3po.example.com;  # TODO: Your domain
    return 301 https://$host$request_uri;
}
