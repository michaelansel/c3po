{
  "description": "C3PO multi-agent coordination hooks",
  "hooks": {
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/setup.py\"",
            "timeout": 120
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/register_agent.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__c3po__send_message",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/upload_blob.py\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "mcp__c3po__ping|mcp__c3po__list_agents|mcp__c3po__register_agent|mcp__c3po__set_description|mcp__c3po__send_message|mcp__c3po__get_messages|mcp__c3po__reply|mcp__c3po__wait_for_message|mcp__c3po__ack_messages|mcp__c3po__upload_blob|mcp__c3po__fetch_blob",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/ensure_agent_id.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/peek_c3po_async.py\"",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/check_inbox.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/unregister_agent.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
