FROM python:3.12-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install MCP client library
RUN pip install --no-cache-dir mcp httpx httpx-sse

# The agent uses the MCP client library to register
COPY tests/acceptance/agent-register.py /agent-register.py

CMD ["python", "/agent-register.py"]
