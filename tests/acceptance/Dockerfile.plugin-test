FROM node:20-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Create test user (Claude Code doesn't like running as root)
RUN useradd -m -s /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Copy test script
COPY --chown=testuser:testuser tests/acceptance/test-plugin-install.sh /home/testuser/test-plugin-install.sh
RUN chmod +x /home/testuser/test-plugin-install.sh

# Default command
CMD ["/home/testuser/test-plugin-install.sh"]
